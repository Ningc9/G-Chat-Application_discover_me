<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInNextFragment"
    android:background="#000000">

    <ImageView
        android:id="@+id/gchatLogoSignInNext"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/gchatsplashscreen"/>

    <EditText
        android:id="@+id/signInPagePhoneEdt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="text"
        android:layout_below="@+id/gchatLogoSignInNext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Phone"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#636363"
        android:textSize="22sp"
        android:alpha="0.7"/>


    <EditText
        android:id="@+id/passwordEdtSignInNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="textPassword"
        android:layout_below="@+id/signInPagePhoneEdt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:drawableEnd="@drawable/helpicon"
        android:drawableTint="#FFFFFF"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#636363"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_regular"
        android:alpha="0.7"/>

    <TextView
        android:id="@+id/smsVerifyCodeTxt"
        android:layout_below="@+id/passwordEdtSignInNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login via sms verification code"
        android:textSize="18sp"
        android:textColor="#636363"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"/>

    <Button
        android:id="@+id/signPageeLoginButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#0ABAb5"
        android:padding="15dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:textSize="24sp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"/>

</RelativeLayout>