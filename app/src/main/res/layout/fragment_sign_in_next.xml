<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInNextFragment"
    android:background="#000000">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/goatLogoSignInNext"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/goat"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="3dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10dp" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="text"
        android:layout_below="@+id/goatLogoSignInNext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Phone"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="22sp"
        android:alpha="0.7"/>


    <EditText
        android:id="@+id/passwordEdtSignInNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="textPassword"
        android:layout_below="@+id/nameEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:drawableEnd="@drawable/helpicon"
        android:drawableTint="#FFFFFF"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_regular"
        android:alpha="0.7"/>

    <TextView
        android:id="@+id/smsVerifyCodeTxt"
        android:layout_below="@+id/passwordEdtSignInNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login via sms verification code"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"/>

</RelativeLayout>