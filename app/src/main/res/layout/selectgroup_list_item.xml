<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_marginHorizontal="10dp"
    android:padding="15dp">

    <ImageView
        android:id="@+id/selectgroup_chats_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cityimg" />

    <TextView
        android:id="@+id/selectgroupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/selectgroup_chats_img"
        android:textColor="@android:color/black"
        android:text="Title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/selectgroupDescreption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/selectgroup_chats_img"
        android:textColor="@android:color/black"
        android:layout_below="@+id/selectgroupTitle"
        android:text="Description"
        android:textSize="18sp" />

</RelativeLayout>


</RelativeLayout>