<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpFragment"
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:id="@+id/signupImg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/gchatsplashscreen"/>

    <TextView
        android:id="@+id/CreateAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupImg"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textColor="#555C5C"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular" />

    <AutoCompleteTextView
        android:id="@+id/countryEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CreateAccountText"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:hint="Country/Region"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:textSize="22sp"
        android:alpha="0.7"/>

    <ImageView
        android:id="@+id/arrowImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/CreateAccountText"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/arrowback" />

    <Button
        android:id="@+id/sendCode"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/countryEdit"
        android:layout_alignEnd="@+id/countryEdit"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="7dp"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp"
        android:text="Send Code"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp" />

    <EditText
        android:id="@+id/edtPhoneEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_below="@+id/countryEdit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:drawableTint="#FFFFFF"
        android:hint="Phone/Email"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:textSize="22sp"
        android:alpha="0.7"/>

    <EditText
        android:id="@+id/verificationEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/edtPhoneEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:hint="Verification Code"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:textColorHint="#FFFFFF"
        android:drawableTint="#FFFFFF"
        android:textSize="22sp"
        android:alpha="0.7"/>

    <TextView
        android:id="@+id/resendCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/verificationEdt"
        android:layout_below="@+id/verificationEdt"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:padding="5dp"
        android:text="Resend Code"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/nextButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#DCD7D7"
        android:padding="15dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:textSize="24sp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        app:cornerRadius="15dp" />

</RelativeLayout>