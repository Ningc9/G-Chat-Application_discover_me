<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpFragment"
    android:orientation="vertical"
    android:background="#000000">


    <TextView
        android:id="@+id/CreateAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="97dp"
        android:text="Create Account"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_country"
        android:layout_below="@+id/CreateAccountText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:entries="@array/countries"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="20dp"
        />
    <View
        android:id="@+id/view"

        android:layout_below="@+id/spinner_country"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"/>


    <EditText
        android:id="@+id/edt_phone_email"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone/Email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:paddingLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/sendCode"
        android:layout_below="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:text="Send the code"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:strokeWidth="1dp"
        app:strokeColor="#FFFFFF"
        app:cornerRadius="5dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>/> />

    <EditText
        android:id="@+id/verificationEditText"
        android:layout_below="@+id/edt_phone_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Verification Code"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:paddingLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"/>


    <Button
        android:id="@+id/resendCodeButton"
        android:layout_below="@+id/sendCode"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:text="Resend Code"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:strokeWidth="1dp"
        app:strokeColor="#FFFFFF"
        app:cornerRadius="5dp"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>/> /> />

    <Button
        android:id="@+id/nextButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/verificationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="15dp"
        android:text="Next"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#DCD7D7"
        app:cornerRadius="15dp"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>/>


</RelativeLayout>